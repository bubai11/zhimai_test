<!--pages/history/history.wxml-->

<view class="top">
  <!-- "管理"按钮 -->
  <view class="admin-button button" bind:tap="admini_act">
    {{administation}}
  </view>

  <!-- 搜索框 -->
  <view class="search-box">
    <view class="icon search">
      <image src="/assets/public/search.png"></image>
    </view>
    <input class="content" id="search-content" type="text" maxlength="20" focus="true" confirm-type="search" auto-focus="false"></input>
    <view class="icon cancel">
      <image src="/assets/public/search-cancel.png"></image>
    </view>
  </view>

  <navigator url="/pages/classify2/classify2" class="classify-button button">
    分类
  </navigator>
</view>

<view class="bottom">
  <!-- 活动顶部,分两种类型 -->
  <view class="button-box">
    <view class="{{showborder1 ? 'line-show': 'line-hidden'}}" bind:tap="act_switch1">
      综测活动
    </view>
    <view class="{{showborder2 ?'line-show':'line-hidden'}}" bind:tap="act_switch2">
      校园资讯
    </view>
  </view>

  <!-- 活动列表 -->
  <view class="acti-box">
    <view class="acti" wx:for="{{ actList }}" wx:key="index">
      <!-- 活动时间,去重 -->
      <view class="time {{item.timeShow}}">
        {{item.time}}
      </view>
      <!-- 点击"管理"时,是否被选择 -->
      <checkbox class="point {{point_show ? 'show': 'hidden'}} {{point_active[index] ? 'point-active':''}}" bind:tap="choose_act" data-index="{{index}}" checked="{{point_active[index]}}">
      </checkbox>
      <!-- 具体活动: 标题、分类、图片 -->
      <view class="act" bind:tap="act_navigator" data-index="{{index}}">
        <view class="left" data-index="{{index}}">
          <view class="topic" data-index="{{index}}">
            <text>{{item.title}}</text>
          </view>
          <view class="classify" data-index="{{index}}">
            <text>{{item.classify}}</text>
          </view>
        </view>
        <view class="right">
          <image src="{{item.img}}"></image>
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 到达底部 -->
<view class="empty">
  触碰到我的底线了~
</view>

<!-- 回到顶部按钮 -->
<view class="to-top" id="to-top" bindtap="backTop" wx:if="{{isTop}}">
  <image src="/assets/public/to-top.png"></image>
</view>

<!-- "删除"按钮 -->
<view class="delete {{point_show ? 'show': 'hidden'}}" bind:tap="deleteAct">
  删除
</view>