<!--pages/info/info.wxml-->

<!-- 顶部 -->
<view class="top">
  <!-- "分类"按钮 -->
  <navigator class="classify" url="/pages/classify2/classify2">
    信息资讯分类
  </navigator>
  <!-- 跳转"搜索页面" -->
  <navigator class="search" url="/pages/search/search">
    <image src="/assets/public/search.png" />
  </navigator>
</view>

<!-- 置顶通知 -->
<view class="important-info">
  <view class="important">
    <view class="box">
      重要通知
    </view>
  </view>
  <!-- 重要通知下方的轮播 -->
  <swiper class="swiper" indicator-dots>
    <!-- indicator-active-color="#4F4F57" -->
    <swiper-item>
      <view class='box' wx:for="{{ 3 }}" wx:key="index">
        {{swiper[index]}}
      </view>
    </swiper-item>
    <swiper-item>
      <view class="box" wx:for="{{ 3 }}" wx:key="index">
        {{swiper[index+3]}}
      </view>
    </swiper-item>
  </swiper>
</view>

