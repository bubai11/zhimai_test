/* 页面样式 */
page {
  background-color: #f8f8f8;
}

/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 列表样式 */
.info-list {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

/* 描述文本样式 */
.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.notification-item {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.notification-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.notification-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
}

.notification-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 20rpx 0;
} 