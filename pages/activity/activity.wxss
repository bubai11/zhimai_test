/* 页面样式 */
page {
  background-color: #f8f8f8;
}

/* 筛选区域 */
.filter-section {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.filter-group {
  display: flex;
  gap: 20rpx;
}

.filter-item {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  font-size: 28rpx;
  color: #666;
}

.filter-item.active {
  background: #4CAF50;
  color: #fff;
}

/* 活动卡片 */
.box {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.pic {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.pic image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-tag.ongoing {
  background: #4CAF50;
}

.status-tag.ended {
  background: #999;
}

.info-box {
  padding: 20rpx;
}

.topic {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.details {
  font-size: 26rpx;
  color: #666;
}

.time, .location {
  margin-bottom: 8rpx;
}

.type-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #e8f5e9;
  color: #4CAF50;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 回到顶部按钮 */
.to-top {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.to-top image {
  width: 40rpx;
  height: 40rpx;
} 