/* 页面样式 */
page {
  background-color: #f8f8f8;
}

/* 顶部个人信息 */
.top {
  width: 100%;
  height: 200rpx;
  background-color: #2785FF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 头像 */
.face {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #fff;
}

.face image {
  width: 100%;
  height: 100%;
}

/* 字体 */
.font {
  flex: 1;
  margin-left: 30rpx;
  color: #fff;
}

.font .name {
  font-size: 36rpx;
  font-weight: bold;
}

.font .school-zone {
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 编辑资料按钮 */
.button {
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

/* 活动通知 */
.notice-box {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.notice {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.notice .pic {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.notice .pic image {
  width: 100%;
  height: 100%;
}

.notice .content {
  font-size: 28rpx;
  color: #666;
}

/* 服务中心 */
.serve-center {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.serve-center .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.serve-center .button-box {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.serve-center .button-box .box {
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.serve-center .button-box .box .icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.serve-center .button-box .box .icon image {
  width: 100%;
  height: 100%;
}

